<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @comment do |f| %>
        <!-- ここでいう＠はモデルの新要素のことを指している -->
        <%#  ここでは空箱の@topicを使用しているので、以下では空箱の中身を入れる作業になっている。%>
            <div class="form-group">
              <%= f.label :content %>
              <%= f.text_area :content, class: "form-control"%>
              <%= f.hidden_field :topic_id %>
              <%#  上記のhiddenは投稿しようとしているtopicのtopic_idを記録してくれている。これがないと投稿してもどのトピックに投稿しているのかわからない%>
            </div>
            <%# descriotionはカラム名 %>
            <% if logged_in? %>
              <%= f.submit '投稿', class: "btn btn-black btn-block" %>
            <% else %>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
